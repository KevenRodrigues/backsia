<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <title>Ocorrências por Caixa</title>
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700,900&display=swap" rel="stylesheet">
        <meta charset="utf-8" />
        <style>
        /** BASICA **/
        *, html {
        padding:0;
        margin:0;
        }
        html {
        font-family: 'Lato', Arial, sans-serif;
        }
        @media screen {
        body {
        display:flex; flex-direction:column;
        align-items: center;
        background-color: #ccc;
        }
        #wrap {
        background-color: #fff;
        padding: 50px;
        margin: 30px;
        box-shadow: 0px 0px 6px 1px rgba(0,0,0,0.25);
        }
        #loader{
            background-color: orangered;
        }
        .loader-hide {
            display:none;
        }
        .orientation-retrato{width: 60%;}
        .orientation-paisagem{width: 80%;}
        }
        h1, h2, h3, h4{
        font-weight: 900;
        }
        h1 {
        font-size: 15px;
        color: <%= color  %>;
        }
        h2 {
        font-size: 15px;
        color: <%= color  %>;
        padding-top: 10px;
        margin-top: 10px;
        border-top: 1px solid <%= color  %>;
        padding-bottom: 10px;
        margin-bottom: 10px;
        border-bottom: 1px solid <%= color  %>;
        text-transform: uppercase;
        }
        h3 {
        font-size: 12px;
        color: <%= color  %>;
        text-transform: uppercase;
        }
        strong {
        font-weight: 700;
        font-size: 12px;
        color: #444;
        }
        p {
        font-weight: 400;
        font-size: 12px;
        color: #444;
        text-transform: capitalize;
        }
        .row {
        display:flex;
        flex-direction: row;
        /* margin-bottom: 2px; */
        }
        /** HEADER **/
        header{
        display:flex;
        flex-direction: row;
        align-items:center;
        margin-bottom: 20px;
        }
        header div:first-child{
        flex:1
        }
        header h1 {
        font-size: 18px;
        text-transform: uppercase;
        margin-bottom: 3px;
        }
        header strong {
        margin-right: 3px;
        }
        header strong {
        margin-bottom: 3px;
        }
        header p, header strong {
        font-size:15px;
        }
        .logotipo {
        padding-left:50px
        }
        .logotipo img{max-height: 40px;}
        @media screen {
            .logotipo img{max-height: 60px;}
        }
        /** CONTENT **/
        .caixa {
        padding-bottom: 20px;
        }
        .cabecalho {
        display:flex;
        align-items: center;
        padding-bottom: 10px;
        margin-bottom: 10px;
        border-bottom-width: 1px;
        border-bottom-style: solid;
        border-bottom-color: #444;
        }
        .cabecalho h3 {
        color: #444;
        }
        .totalgeral {
        display:flex;
        padding-top: 10px;
        margin-top: 10px;
        border-top-width: 1px;
        border-top-style: dotted;
        border-top-color: #ccc;
        }
        .resumo {
        padding-bottom: 30px;
        }
        .resumo h2 {
        margin-bottom: 0;
        }
        .totalizador{
        display: flex;
        align-items: center;
        padding-top: 10px;
        padding-bottom: 10px;
        border-bottom: solid 1px #ccc;
        }

        .totalizador:last-child {
        padding-top: 10px;
        padding-bottom: 10px;
        border-bottom: solid 1px <%= color  %>;
        }

        .totalizador h4 {
        font-size: 13px;
        text-transform: uppercase;
        color: <%= color  %>;
        }

        .totalizador-valor {
        display: flex;
        padding-left: 10px;
        }

        .totalizador-valor strong{
        display: flex;
        font-size: 13px;
        padding-right: 5px;
        }

        .totalizador-valor p{
        font-size: 13px;
        }
        </style>
    </head>
    <body>
        <%if (size === 'retrato') { %>
        <div id="wrap" class="orientation-retrato">
        <% } else { %>
        <div id="wrap" class="orientation-paisagem">
        <% } %>
            <!-- HEADER -->
            <header>
                <div>
                    <h1>Ocorrências por Caixa</h1>
                    <p><strong>Período:</strong><%=start%> a <%=end%></p>
                    <p class="emissao"><strong>Emissão:</strong><%=now%></p>
                    <p class="operador"><strong>Operador:</strong><%=profile.nome%></p>
                </div>
                <%if (logo) { %>
                    <div class="logotipo">
                        <img src="<%= logo %>">
                    </div>
                <% } %>
            </header>
            <!-- HEADER -->
            <!-- HTML -->
            <% data.forEach( (item,index,array) => {%>
                <div class="caixa">
                    <h2>Caixa <%= item.caixa %></h2>
                    <div class="row cabecalho">
                        <div style="width: 5%">
                            <strong>Posto</strong>
                        </div>
                        <div style="width: 8%"">
                            <strong>Amostra</strong>
                        </div>
                        <div style="width: 10%"">
                            <strong>Data</strong>
                        </div>
                        <div style="width: 6%"">
                            <strong>Hora</strong>
                        </div>
                        <div style="width: 20%"">
                            <strong>Operador</strong>
                        </div>
                        <div style="width: 10%"">
                            <strong>Ação</strong>
                        </div>
                        <div style="width: 10%"">
                            <strong>Valor</strong>
                        </div>
                        <div style="width: 15%"">
                            <strong>Tipo</strong>
                        </div>
                        <div style="width: 15%"">
                            <strong>Motivo</strong>
                        </div>
                    </div>
                    <% item.ocorrencias.forEach( (ocrr,index,array) => {%>
                        <div class="row">
                            <div style="width: 5%">
                                <p><%= ocrr.posto %></p>
                            </div>
                            <div style="width: 8%"">
                                <p><%= ocrr.amostra %></p>
                            </div>
                            <div style="width: 10%"">
                                <p><%= ocrr.data %></p>
                            </div>
                            <div style="width: 6%"">
                                <p><%= ocrr.hora %></p>
                            </div>
                            <div style="width: 20%"">
                                <p><%= ocrr.operador.nome.trim() %></p>
                            </div>
                            <div style="width: 10%"">
                                <p><%= ocrr.acao.trim() %></p>
                            </div>
                            <div style="width: 10%"">
                                <p>R$ <%= ocrr.valpag %></p>
                            </div>
                            <div style="width: 16%"">
                                <p><%= ocrr.descricao.trim() %></p>
                            </div>
                            <div style="width: 15%"">
                                <p><%= ocrr.motivo.trim() %></p>
                            </div>
                        </div>
                    <% });%>
                </div>
            <% });%>
            <!-- HTML -->
        </div>
    </body>
</html>
